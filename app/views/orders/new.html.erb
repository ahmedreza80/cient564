<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css">
    <link rel="stylesheet" href="/assets/checkout.css">

    <title>Check Out</title>
  </head>
  <body>

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="#"><img src="" alt="" class="img-fluid"></a>
                
              
                <div>
                  <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                                <i class="fa fa-cart-arrow-down d-block" aria-hidden="true"></i>
                        <p><span class="text-color">Cart ------------ Delivery &amp; Billing Address ------------ </span>
                         Payment</p>
                    </li>
                    <li class="nav-item">
                        <div class="user">
                            <span class="h4"> Hello</span>
                        </div>
                    </li>
                  </ul>
                  
                </div>
              </nav>

        <div class="container mt-5">
            <div class="row">
                <div class="col col-md-8">
                    <div class="order-summary">
                            <div id="accordion">
                                    <div class="card mb-1">
                                      <div class="card-header" id="summary">
                                        <h5 class="mb-0">
                                          <button class="btn" data-toggle="collapse" data-target="#one" aria-expanded="true" aria-controls="one">
                                                <strong>Need Help?</strong>
                                                <span>(<%= link_to pluralize(current_cart.items_count, 'item'), cart_path %>)</span>
                                          </button>
                                        </h5>
                                      </div>
                                  
                                      <div id="one" class="collapse" aria-labelledby="summary" data-parent="#accordion">
                                        <div class="card-body">
                                              <div class="container">
                                                  <div class="col col-md-8">
                                                    <div class="box"> 
                                                        <div class="row">
                                                                <div class="col-md-5">
                                                                    <img src="/assets/help.png" alt="" class="img-fluid">
                                                                </div>
                                                                <div class="col col-md-7">
                                                                    <ul>
                                                                        <li>Need Help With Delivery.</li>
                                                                        <li>If you need any help regarding delivery.</li>
                                                                        <li><span class="text-color"><a href="/welcome/contact">Contact Us</a></span></li>
                                                                    </ul>
                                                                </div>
                                                            </div>
                                    </div>

                                                  </div>
                                              </div>
                                          </div>
                                        </div>
                                      </div>
                                    </div>
                    </div>

                    <div class="form-checkOut">
                            <div id="accordion">
                                    <div class="card">
                                      <div class="card-header" id="form-checkOut">
                                        <h5 class="mb-0">
                                          <button class="btn" data-toggle="collapse" data-target="#two" aria-expanded="true" aria-controls="two">
                                                <strong class="text-uppercase">Shipping &amp; Billing Details</strong>
                                          </button>
                                        </h5>
                                      </div>
                                  
                                      <div id="two" class="collapse show" aria-labelledby="form-checkOut" data-parent="#accordion">
                                        <div class="card-body">
                                                
                                                  <%= form_for @order, url: checkout_path do |f| %>
                                                        <div class="form-group">
                                                            <div class="d-flex justify-content-between">
                                                         
                                                          <%= f.text_field :first_name, :class => 'lala', :value => current_or_guest_user.username, placeholder: "Your First Name" %>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                            <div class="d-flex justify-content-between">
                                                          
                                                          <%= f.text_field :last_name, :class => 'lala', placeholder: "Your Last Name" %>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                            <div class="d-flex justify-content-between">
                                                          
                                                          <%= f.text_field :mobile_number, :class => 'lala', :value => current_or_guest_user.phone, placeholder: "Your Valid Mobile Number" %>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                            <div class="d-flex justify-content-between">
                                                        
                                                          <%= f.text_field :email, :class => 'lala', :value => current_or_guest_user.email, placeholder: "Your Email Address" %>
                                                        </div>
                                                    </div>
                                                        <div class="form-group">
                                                            <div class="d-flex justify-content-between">
                                                        
                                                          <%= f.hidden_field :user_id, :class => 'lala', :value => current_or_guest_user&.id%>
                                                        </div>
                                                    </div>
                                                        <div class="form-group">
                                                                <div class="d-flex justify-content-between">
                                                         
                                                          <%= f.text_field :delivery_address, :class => 'lala', :value => current_or_guest_user.location, placeholder: "Complete Delivery Addresss" %>
                                                        </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <div class="d-flex justify-content-between">
                                                       
                                                          <%= f.text_field :state, :class => 'lala', placeholder: "State" %>
                                                        </div>
                                                    </div>

                                                        <div class="form-group">
                                                            <div class="d-flex justify-content-between">
                                                       
                                                          <%= f.text_field :city, :class => 'lala', placeholder: "City / District" %>
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                            <div class="d-flex justify-content-between">
                                                       
                                                          <%= f.text_field :area, :class => 'lala', placeholder: "Locality / Area" %>
                                                        </div>
                                                    </div>

                                                      <div class="form-group">
                                                            <div class="d-flex justify-content-between">
                                                          <%= f.text_field :pincode, :class => 'lala', :value => current_or_guest_user.pincode, placeholder: "Pincode" %>
                                                        </div>
                                                    </div>
<br>
<br>
<br>

<div class="modal" id="myModalrepeat">
    <div class="modal-dialog">
      <div class="modal-content">
      
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Repeat This Order</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        
        <!-- Modal body -->
        <div class="modal-body" style="overflow-y:visible;">
          <div class="jumbotron">
                                                    <div class="form-group">
                                                            <div class="d-flex justify-content-between">
                                                              <p><b>Repeat this order:</b></p>
                                                              <br>
                                                          <%= label_tag 'repeat_everyday', 'Everyday' %>
                                                          <%= check_box_tag 'order[repeat][]', 'Everyday', checked('Everyday'), id: 'repeat_everyday' %>
                                                        </div>
                                                      </div>

                                                       <div class="jumbotron">
                                                    <div class="form-group">
                                                          <p><b>Repeat this order Every:</b></p>
                                                          <br>
                                                          <%= label_tag 'repeat_monday', 'Monday' %>
                                                          <%= check_box_tag 'order[repeat][]', 'Monday', checked('Monday'), id: 'repeat_monday' %>


                                                          
                                                          <%= label_tag 'repeat_tuesday', 'Tuesday' %>
                                                          <%= check_box_tag 'order[repeat][]', 'Tuesday', checked('Tuesday'), id: 'repeat_tuesday' %>


                                                          
                                                          <%= label_tag 'repeat_wednesday', 'Wednesday' %>
                                                          <%= check_box_tag 'order[repeat][]', 'Wednesday', checked('Wednesday'), id: 'repeat_wednesday' %>

                                                          

                                                          <%= label_tag 'repeat_thrusday', 'Thrusday' %>
                                                          <%= check_box_tag 'order[repeat][]', 'Thrusday', checked('Thrusday'), id: 'repeat_thrusday' %>


                                                          
                                                          <%= label_tag 'repeat_friday', 'Friday' %>
                                                          <%= check_box_tag 'order[repeat][]', 'Friday', checked('Friday'), id: 'repeat_friday' %>

                                                          
                                                          <%= label_tag 'repeat_friday', 'Friday' %>
                                                          <%= check_box_tag 'order[repeat][]', 'Friday', checked('Friday'), id: 'repeat_friday' %>

                                                          
                                                          <%= label_tag 'repeat_saturday', 'Saturday' %>
                                                          <%= check_box_tag 'order[repeat][]', 'Saturday', checked('Saturday'), id: 'repeat_saturday' %>

                                                          
                                                          <%= label_tag 'repeat_sunday', 'Sunday' %>
                                                          <%= check_box_tag 'order[repeat][]', 'Sunday', checked('Sunday'), id: 'repeat_sunday' %>
                                                        </div>
                                                    </div>
                                                  </div>
                  </div>
        
        <!-- Modal footer -->
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
        
      </div>
    </div>
  </div>
                                                         

                                                    

                                                    <div class="form-group" style="display: none;">
                                                            <div class="d-flex justify-content-between">
                                                          <%= f.text_field :total, :class => 'lala', :value => current_cart.sub_total, placeholder: "Sub Total" %>
                                                        </div>
                                                    </div>

                                                    <div class="trackit" style="display: none;">
                                                    <div class="form-group">
                                                            <div class="d-flex justify-content-between">
                                                          <label for="exampleFormControlInput1">Tracking</label>
                                                          <%= f.select :tracking, ['Agent Recived Your Order', 'Agent is on his way', 'Your order is canceled please contact support', 'Order Delivered'  ] %>
                                                        </div>
                                                    </div>
                                                  </div>
<div class="jumbotron">

<button class="btn-form search-btn" type="button" data-toggle="modal" data-target="#myModalrepeat">
                Repeat My Order
              </button>
</div>
                                                    
                                                        <div class="dim" style="padding:0; margin:0;">
                                                              <%= f.submit "Save & Continue", class: "btn-success" %>
                                                            </div>
                                                              <% end %>
                                                      
                                        </div>
                                      </div>
                                    </div>
                                    </div>
                    </div>

                </div>
                <div class="col col-md-4">
                    <div class="box">
                        <ul class="d-flex justify-content-between">
                            <li>
                                <p>Item Total</p>
                            </li>
                            <li>
                                <strong>Rs. <%= current_cart.sub_total %></strong>
                            </li>
                        </ul>
                        <ul class="d-flex justify-content-between">
                                <li>
                                    <p>Shipping &amp; Handling <span class="text-color">(free)</span></p>
                                </li>
                                <li>
                                    <strong>Rs. <%= current_cart.sub_total %></strong>
                                </li>
                            </ul>
                            <hr>
                            <ul class="d-flex justify-content-between">
                                    <li>
                                        <p>You Pay
                                            <br>
                                            <span class="text-muted"><small>(Including all Taxes)</small></span>
                                        </p>
                                    </li>
                                    <li>
                                            <strong>Rs. <%= current_cart.sub_total %></strong>
                                        </li>
                                </ul>
                    </div>
                </div>
            </div>
        </div>

<style>
