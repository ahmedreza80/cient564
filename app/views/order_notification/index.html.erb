<head>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Material+Icons">

    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons">
</head>


<body>
    
    <div class="container mt-5">
        <div class="title">
          <h3>Notifications</h3>
        </div>
    </div>
    <% if @notifications.present?%>

 

<%@notifications.each do |notice|%>
    <div class="alert alert-info">
        <div class="container">
            <div class="alert-icon">
                <i class="material-icons">New Order</i>
            </div>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true"><i class="material-icons">clear</i></span>
            </button>

            <b>New Order:</b> <%=notice&.order&.first_name%> have placed a order <%=notice&.order&.items&.first&.product&.name%>.
            <%= link_to "Details", order_notification_order_details_path(id:notice&.order&.id), {:style=>'color:#FFFFFF;', :class => "btn btn-success"}%>
        </div>
    </div>

  <%end%>
    <%else%>
    <footer class="footer text-center ">
        <p><p>It seems, You Do not have orders yet!!</p></p>
    </footer>
<%end%>
    
