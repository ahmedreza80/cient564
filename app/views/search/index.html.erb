<h1>Products</h1>

<%= form_tag("index", method: "get") do %>
  <%= label_tag(:q, "Search for:Products name, city,state,area,category",class:"form-control")  %>
  <%= text_field_tag :q,"",placeholder:"Enter to search",class:"form-control"  %>
  <%= submit_tag("Search",class:"form-control") %>
<% end %>

<h1>Products</h1>
<% if @products.present?%>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Image</th>
      <th>Imagetwo</th>
      <th>Imagethree</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products&.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td><%= product.image %></td>
        <td><%= product.imagetwo %></td>
        <td><%= product.imagethree %></td>
        <td><%= product.category %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%else%>
<p>Oops!! No search results</p>
<%end%>